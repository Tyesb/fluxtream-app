<h3>Please sign in</h3>

<form class="form-horizontal" role="form" method="post" action="signIn">
    <div class="form-group">
        <label for="f_username" class="col-sm-2 control-label">Username</label>
        <div class="col-xs-4">
            <input type="text" class="form-control" id="f_username" name="f_username" placeholder="Email">
        </div>
    </div>
    <div class="form-group">
        <label for="f_password" class="col-sm-2 control-label">Password</label>
        <div class="col-xs-4">
            <input type="password" class="form-control" id="f_password" name="f_password" placeholder="Password">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-xs-4">
            <button type="submit" class="btn btn-primary">Sign in</button>
        </div>
    </div>
</form>